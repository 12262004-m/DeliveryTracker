{{template "top" .}}
<title> Login admin</title>
</head>
<body class="bg-orange-100">
    <div class="flex items-center justify-center p-4 min-h-screen">
         <div class="bg-white/80 backdrop-blur-sm p-8 md:p-10 rounded-3xl shadow-xl border border-white max-w-md w-full">
            <div class="text-center mb-8">
                <div class="flex flex-row gap-4 items-center justify-center">
                    <img src="/static/package.svg" alt="Package" class="w-10 h-10">
                     <h1 class="text-4xl font-bold text-orange-500 text-center tracking-light"> Delivery Tracker </h1>
                </div>
                <p class="text-gray-500 mt-2">Admin Login</p>
            </div>
            {{if .Error}}
            <div class="bg-red-100 border border-red-300 text-red-500 px-4 py-3 rounded mb-4">
                {{.Error}}
            </div> 
            {{end}}
            <form action="/login" method="POST" class="space-y-6">
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-2" for="username">Username</label>
                    <input type="text" id="username" name="username" required
                        class="w-full p-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all">
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-500 mb-2" for="password">Password</label>
                    <input type="password" id="password" name="password" required
                        class="w-full p-2 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all">
                </div>
                <button type="submit" class="w-full bg-orange-500 text-white font-semibold py-3 px-3 rounded-xl hover:bg-orange-600 active:scale-[0.99] transition-all shadow-lg">
                    Login
                </button>
            </form>
         </div>
    </div>
{{template "bottom" .}}