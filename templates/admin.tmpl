{{template "top" .}}
<title>Admin Dashboard</title>
</head>
<body class="bg-gray-200 min-h-screen">
  <div class="container mx-auto px-4 py-8 md:py-12 flex justify-center">
    <div class="w-full max-w-7xl">
        <div class="bg-white/80 rounded-2xl border border-white/20 px-6 py-4 mb-8">
            <div class="flex items-center justify-between gap-6 w-full">
                <div class="flex items-center gap-4 min-w-0">
                    <img src="/static/package.svg" alt="Package" class="w-8 h-8 shrink-0">
                    <h1 class="text-2xl font-bold text-orange-500 tracking-tight whitespace-nowrap">
                    Delivery Tracker Admin
                    </h1>
                </div>
                <div class="flex items-center gap-4 shrink-0">
                    <span class="text-gray-500 font-medium whitespace-nowrap">
                        Welcome, {{.Username}}
                    </span>
                    <form action="/logout" method="POST">
                        <button type="submit" class="px-4 py-2 text-sm font-medium text-red-500 border border-red-300 rounded-xl hover:border-red-400 hover:bg-red-100">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-xl border border-white overflow-hidden">
            <div class="p-8 md:p-10">
                <div class="flex items-center mb-8 justify-between">
                    <h2 class="text-xl font-semibold text-gray-800">Active orders</h2>
                    <button type="button" onclick="location.reload()" class="px-2 py-2 border border-gray-300 rounded-xl hover:border-gray-400 hover:bg-gray-100">
                        <img src="/static/reload.svg" alt="Reload" class="w-6 h-6">
                    </button>
                </div>
            <div class="w-full border border-gray-300 rounded-2xl overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gray-50/50 border-b border-gray-300">
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Order ID</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Name</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Phone</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Address</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Packages</th>
                        <th class="px-6 py-4 text-left text-xs font-semibold text-gray-800 uppercase tracking-wider">Actions</th>
                        </tr>
                    </thead>

                <tbody class="bg-white/80 divide-y divide-gray-100">
                    {{range .Orders}}
                    <tr class="hover:bg-gray-50/50 transition-colors">
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <a href="/customer/{{.ID}}" class="font-medium text-orange-500 hover:text-orange-400 hover:underline">{{.ID}}</a>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-medium">{{.Status}}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{.CustomerName}}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{.Phone}}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">{{.Address}}</td>

                        <td class="px-6 py-4 text-sm text-gray-900">
                            <div class="space-y-1">
                            {{range $index, $package := .Items}}
                                <div class="flex items-center gap-2">
                                    <span class="text-gray-500 shrink-0">#{{add $index 1}}</span>
                                    <span class="truncate">{{$package.Size}} {{$package.Package}}</span>
                                    {{if $package.Instructions}}
                                        <span title="{{$package.Instructions}}" class="inline-flex items-center justify-center cursor-pointer">
                                            <img src="/static/info.svg" alt="Instructions" class="w-5 h-5 opacity-70 hover:opacity-100">
                                        </span>
                                    {{end}}
                                </div>
                                {{end}}
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-800">
                            <div class="flex gap-2">
                                <form action="/admin/order/{{.ID}}/update" method="POST">
                                    <select name="status" onchange="this.form.submit()" class="text-center appearance-none px-4 py-2 pr-10 border border-gray-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent transition-all bg-white hover:bg-gray-100">
                                        {{$currentStatus := .Status}}
                                        {{range $.Statuses}}
                                        <option {{if eq . $currentStatus}}selected{{end}} value="{{.}}">{{.}}</option>
                                        {{end}}
                                    </select>
                                </form>
                                <form action="/admin/order/{{.ID}}/delete" method="POST">
                                    <button type="submit" onclick="return confirm('Are you sure you want to delete this order?')" class="p-2 text-red-500 border border-red-300 rounded-xl hover:border-red-400 hover:bg-red-100">
                                        <img src="/static/delete.svg" alt="Delete" class="w-5 h-5">
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                    {{end}}
                </tbody>
                </table>
            </div>
        </div>
      </div>
    </div>
  </div>
{{template "bottom" .}}