{{template "top" .}}
<title> Admin Dashboard</title>
</head>
<body class="bg-gray-200 min-h-screen">
    <div class="flex items-center justify-center p-4">
         <div class="p-8 md:p-10 max-w-7xl w-full">
            <div class="flex justify-between text-center mb-8">
                <div class="flex flex-row gap-4 items-center justify-center">
                    <img src="/static/package.svg" alt="Package" class="w-8 h-8">
                     <h1 class="text-2xl font-bold text-orange-500 text-center tracking-light">  Delivery Tracker Admin </h1>
                </div>
                <div class="flex items-center gap-4">
                    <span class="text-gray-500 font-medium">
                        Welcome, {{.Username}}
                    </span>
                    <form action="/logout" method="POST">
                        <button type="submit" class="px-4 py-2 text-sm font-medium text-red-500 border border-red-300 rounded-xl hover:border-red-400 hover:bg-red-100">
                            Logout
                        </button>
                    </form>
                </div>
            </div>
         </div>
    </div>
{{template "bottom" .}}